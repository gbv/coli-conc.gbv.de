    "dotenv": "^16.0.0",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-footnote": "^3.0.3",
    "meow": "^9.0.0",
    "moment": "^2.29.1",
    "sass": "^1.49.9",
    "sharp": "^0.30.2"
  },
